generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(uuid())
  username    String   @unique
  displayName String
  createdAt   DateTime @default(now())
  lastSeen    DateTime @default(now())

  hostedGames   Game[]        @relation("HostedGames")
  gamePlayers   GamePlayer[]
  gameResults   GameResult[]

  @@map("users")
}

model Game {
  id                   String    @id @default(uuid())
  roomCode             String    @unique
  status               String    // WAITING, WORD_SELECTION, ACTIVE, COMPLETED
  hostId               String?
  maxPlayers           Int       @default(4)
  currentTurnPlayerId  String?
  roundNumber          Int       @default(1)
  turnTimerSeconds     Int       @default(300) // 5 minutes default, min 10 seconds
  currentTurnStartedAt DateTime?
  currentTurnCard      String?   // Card type for current turn (normal, additional, expose_left, etc.)
  turnCardMultiplier   Int       @default(1) // Multiplier for first successful guess (1-5)
  turnCardUsed         Boolean   @default(false) // Whether the card/multiplier effect has been used this turn
  pendingExposePlayerId String?  // Player who must expose a letter (for expose cards)
  createdAt            DateTime  @default(now())
  startedAt            DateTime?
  completedAt          DateTime?

  host    User?        @relation("HostedGames", fields: [hostId], references: [id])
  players GamePlayer[]
  turns   GameTurn[]
  results GameResult[]

  @@map("games")
}

model GamePlayer {
  id                String   @id @default(uuid())
  gameId            String
  userId            String?  // Nullable for bot players
  botId             String?  // Bot identifier (for bot players)
  isBot             Boolean  @default(false)
  turnOrder         Int
  secretWord        String?
  secretWordHash    String?
  paddedWord        String?  // Word with padding (e.g., "...LION....")
  frontPadding      Int      @default(0) // Number of blanks at front
  backPadding       Int      @default(0) // Number of blanks at back
  revealedPositions Json     @default("[]")
  missedLetters     String[] @default([]) // Letters guessed incorrectly against this player
  guessedWords      String[] @default([]) // Words guessed against this player (correct or incorrect)
  totalScore        Int      @default(0)
  isEliminated      Boolean  @default(false)
  joinedAt          DateTime @default(now())

  // Bot-specific fields (stored as JSON for flexibility)
  botDisplayName    String?  // Bot's display name
  botModelName      String?  // Ollama model used
  botDifficulty     String?  // easy, medium, hard
  botConfig         Json?    // Full bot configuration (ollamaOptions, personality, etc.)

  game Game @relation(fields: [gameId], references: [id], onDelete: Cascade)
  user User? @relation(fields: [userId], references: [id])

  turnsPlayed   GameTurn[] @relation("PlayerTurns")
  turnsTargeted GameTurn[] @relation("TargetedTurns")

  @@unique([gameId, userId])
  @@unique([gameId, botId])
  @@map("game_players")
}

model GameTurn {
  id                String   @id @default(uuid())
  gameId            String
  playerId          String
  targetPlayerId    String
  guessedLetter     String
  isCorrect         Boolean
  positionsRevealed Int[]    @default([])
  pointsScored      Int      @default(0)
  turnNumber        Int
  createdAt         DateTime @default(now())

  game         Game       @relation(fields: [gameId], references: [id], onDelete: Cascade)
  player       GamePlayer @relation("PlayerTurns", fields: [playerId], references: [id])
  targetPlayer GamePlayer @relation("TargetedTurns", fields: [targetPlayerId], references: [id])

  @@map("game_turns")
}

model GameResult {
  id         String   @id @default(uuid())
  gameId     String
  playerId   String
  finalScore Int
  placement  Int
  createdAt  DateTime @default(now())

  game   Game @relation(fields: [gameId], references: [id], onDelete: Cascade)
  player User @relation(fields: [playerId], references: [id])

  @@map("game_results")
}

// Bot preset configurations (saved bot templates)
model BotPreset {
  id           String   @id @default(uuid())
  presetName   String   @unique  // User-friendly name for the preset
  displayName  String   // Default display name for bots using this preset
  modelName    String   // LLM model name (e.g., "llama3.2:3b" for Ollama, "openai/gpt-4" for OpenRouter)
  difficulty   String   @default("medium") // easy, medium, hard
  provider     String   @default("ollama") // ollama or openrouter
  personality  String?  // Optional personality prompt
  ollamaConfig Json     @default("{}") // OllamaGenerateOptions as JSON
  iconSvg      String?  // Custom SVG icon for the bot (from robot generator API)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("bot_presets")
}
