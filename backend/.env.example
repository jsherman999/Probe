NODE_ENV=development
PORT=3000

# Database Configuration
# Change the password for production!
DATABASE_URL=postgresql://probe_user:probe_password@localhost:5432/probe_game

# JWT Configuration
# IMPORTANT: Generate new secrets for production using:
# openssl rand -base64 64
JWT_SECRET=development_jwt_secret_change_in_production_minimum_32_chars
REFRESH_TOKEN_SECRET=development_refresh_secret_change_in_production_minimum_32_chars
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Game Configuration
MAX_PLAYERS_PER_GAME=4
MIN_PLAYERS_PER_GAME=2
WORD_MIN_LENGTH=4
WORD_MAX_LENGTH=12
TURN_TIMEOUT_SECONDS=60
